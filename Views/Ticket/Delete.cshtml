@model BiletApp.Models.Ticket

@{
    ViewData["Title"] = "Bilet Sil";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-trash"></i> Bilet Sil</h1>
    </div>
</div>

<div class="container">
    <h3>Bu bileti silmek istediğinizden emin misiniz?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Etkinlik
            </dt>
            <dd class="col-sm-10">
                @Model.Event.Name
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TicketType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TicketType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Model.Price.ToString("C")
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>

